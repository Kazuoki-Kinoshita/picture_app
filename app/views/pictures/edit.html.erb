<h1>投稿を編集</h1>
<%= form_with(model: @picture, local: true)  do |form| %>
  <% if @picture.errors.any? %>
    <div id = "error_explanation" >
      <h2><%= @picture.errors.count %>件あります</h2>
      <ul>
      <% @picture.errors.full_messages.each do |massage| %>
        <li><%= massage %></li>
      </ul>
      <% end %>
    </div>
  <% end %>

  <div class = "picture_content" > 
    <%= form.label :content %>
    <%= form.text_field :content %><br/>
  </div>
  <div class = "picture_image" > 
  <%= form.label :image %>
  <%= form.text_field :image %><br/>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to "投稿一覧画面に戻る", pictures_path %>