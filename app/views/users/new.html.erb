<h1>アカウント登録</h1>
<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= form.label :name %></p>
  <p><%= form.text_field :name %></p>
  <p><%= form.label :email %></p>
  <p><%= form.email_field :email %></p>
  <p><%= form.label :password %></p>
  <p><%= form.password_field :password %></p>
  <p><%= form.label :password_confirmation %></p>
  <p><%= form.password_field :password_confirmation %></p>
  <p><%= form.submit "アカウント登録" %></p>
<% end %>