<h1>アカウント登録</h1>
<%= form_with(model: @user, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %></br>
  <%= form.label :email %>
  <%= form.email_field :email %></br>
  <%= form.label :password %>
  <%= form.password_field :password %></br>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %></br>
  <%= form.submit "アカウント登録" %>
<% end %>